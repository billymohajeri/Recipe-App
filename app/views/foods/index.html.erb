<p style="color: green"><%= notice %></p>

<h1>Foods</h1>

<div id="foods">
  <table class="table table-striped table-width">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Unit Price</th>
        <% if user_signed_in? %>
          <th scope="col">Action</th>
        <% end %>
      </tr>
    </thead>
    <% @foods.each do |food| %>
      <%= render food %>
      <% if user_signed_in? %>
        <td><%= link_to "Show this food", food %></td>
      <% end %>
    <% end %>
    </tr>
  </tbody>
  </div>
  </table>
</div>

<% if user_signed_in? %>
<%= link_to "New food", new_food_path %>
<% end %>
