<aside class="flex-recipe">
  <h1>Public Recipes</h1>
  <% @recipes.each do |recipe| %>
    <div class="recipe-item">
      <div>
        <p><%= recipe.name %></p>
        <p>By: <%= recipe.name %></p>
      </div>
      <div>
        <p>Total food items: <%= @recipes.length %></p>
        <p>Total price: <%= recipe.name %></p>
      </div>
    </div>
  <% end %>
</aside>