<div id="<%= dom_id recipe %>" class="recipe-container">
  <p>
    <strong>
    <%= recipe.name %>
    </strong>
  </p>

  <p class="inline">
    <strong>Preparation time:</strong>
    <%= recipe.preparation_time %>
  </p>
  <p class="inline">
    <strong>Public:</strong>
    <%= recipe.public %>
  </p>

  <p>
    <strong>Cooking time:</strong>
    <%= recipe.cooking_time %>
  </p>

  <p>

    <%= recipe.description %>
  </p>
  
  </div>